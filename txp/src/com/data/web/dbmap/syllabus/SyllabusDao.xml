<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.data.web.dao.syllabus.SyllabusDao">
    <resultMap type="com.data.web.model.syllabus.SyllabusModel" id="SyllabusModel">
    	<result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="syllabus_name" column="syllabusName"/>
    </resultMap>


    <select id="listJson" parameterType="com.data.web.model.system.Page" resultType="com.data.web.model.syllabus.SyllabusModel">
        select id,user_id as userId,syllabus_name as syllabusName from syllabus 
        where is_delete = 0
        <if test="params.userId!=null and params.userId!='' ">
            and user_id = #{params.userId} 
        </if>
        order by created desc
        LIMIT #{pageStart},#{pageSize}
    </select>

    <select id="getTotalSyllabus" parameterType="java.util.Map" resultType="java.lang.Long">
        select count(*) from syllabus
        <where>
            <if test="userId!=null and userId!='' ">
                and user_id = #{userId}
            </if>
        </where>
    </select>

    <insert id="add" parameterType="com.data.web.model.syllabus.SyllabusModel" >
    <selectKey keyProperty="id" resultType="String" order="BEFORE">
    	select uuid() from dual
    </selectKey>
        insert into syllabus
        (
        id,
        user_id,
        syllabus_name,
        created,
        modified,
        is_delete,
        remark
        )
        values
        (
        #{id},
        #{userId,jdbcType=VARCHAR},
        #{syllabusName,jdbcType=VARCHAR},
        #{created,jdbcType=TIMESTAMP},
        #{modified,jdbcType=TIMESTAMP},
        #{isDelete,jdbcType=INTEGER},
        #{remark,jdbcType=VARCHAR}
        )
    </insert>

    <update id="update" parameterType="com.data.web.model.syllabus.SyllabusModel">
        update syllabus
       	<trim prefix="set" suffixOverrides=",">
           <if test="syllabusName !=null and syllabusName !='' ">
               syllabus_name=#{syllabusName},
           </if>
        </trim>
        where id=#{id}
    </update>

    <update id="delete" parameterType="java.lang.String">
        update syllabus set is_delete = 1 
        where id=#{id}
    </update>
    
    <select id="findById" parameterType="java.lang.String" resultType="com.data.web.model.syllabus.SyllabusModel">
        select id,user_id as userId,syllabus_name as syllabusName from syllabus 
        where is_delete = 0 and id=#{id}
    </select>
    
</mapper> 